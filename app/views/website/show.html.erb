<% @title = "#{@site.title} - #{@page.name}" %>

<div class="Navigation">
  <ul>
    <% @pages.each do |page| %>
      <li><a href="/website/<%= @domain_link %>%2F<%= page.slug %>"><%= page.name %></a></li>
    <% end %>
  </ul>
</div>

<div class="WebPage">
  <% @elements.each do |element| %>
    <<%= element.element %><% element.attributes_hash.each do |key, value| %> <%= key %>='<%= value %>'<% end %>>
    <%= element.content %>
    </<%= element.element %>>
  <% end %>
</div>
